---
import ReactIcon from "../icons/React.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import ButtonLink from "./ButtonLink.astro";
import PreviewIcon from "../icons/Preview.astro";
import GitHubIcon from "../icons/GitHub.astro";
const TAGS ={
    REACT:{
        name:"React",
        class:"bg-black text-white",
        icon:ReactIcon
    },
    REACTNATIVE:{
        name:"React Native",
        class:"bg-black text-white",
        icon:ReactIcon
    },
    NEXT:{
        name:"Next.js",
        class:"bg-white text-[#73bcf6]",
        icon:ReactIcon
    },
    TAILWIND:{
        name:"Tailwind CSS",
        class:"bg-[#003159] text-white",
        icon:TailwindIcon
    },
}
const PROJETCS = [
  {
    title: "Ranchapp",
    description:
      "Aplicación mobile para la gestión de eventos, donde los usuarios pueden crear, gestionar y dividir gastos entre participantes de manera eficiente. Creada con React Native y Expo, con integración de APIS de Google. Enfocada en brindar una experiencia intuitiva y práctica para la organización de eventos. Este proyecto fue mi tesis de carrera, la cual fue aprobada con la máxima calificación.",
    link: "https://ranchapp.com.ar/",
    github: "",
    image:"/projects/svgl.webp",
    tags: [TAGS.REACTNATIVE,TAGS.TAILWIND],
  },
  
 
  
];
---

{
  PROJETCS.map(({ title, description, image,tags,link,github }) => (
    <article class="ml-3 mb-6">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty  text-gray-300">{description}</p>
      <ul class="flex gap-x-2 flex-row">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2 mb-2`}>
                <tag.icon class="size-5"/>
                {tag.name}
            </span>
            </li>
        ))}
      </ul>
      <img
      class="rounded shadow-2xl shadow-white/20 mb-2 " 
      src={image} alt=`Captura de pantalla de ${title}` />
      <nav class="flex gap-4 mt-2 flex-wrap">
        {github && 
        <ButtonLink 
        href={github}>
        <GitHubIcon 
        class="size-6"/><h2>Code</h2>
      </ButtonLink>}
       <ButtonLink href={link}>
        <PreviewIcon/><h2>Preview</h2>
      </ButtonLink>
      </nav>
     
    </article>
  ))
}
